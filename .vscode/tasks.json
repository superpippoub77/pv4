{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Local Server",
      "type": "shell",
      "command": "node server.js",
      "options": { "cwd": "${workspaceFolder}" },
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": {
        "owner": "vp4-server",
        "pattern": [
          {
            "regexp": "^(.*)$",
            "message": 1
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": "Static server running at http://localhost:([0-9]+)"
        }
      }
    }
  ]
}
